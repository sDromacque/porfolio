%article#post_show_content.skinny_wrapper
  %header
    %time.date
      =@post.created_at.strftime('%m/%d/%Y')
      %h1
        =@post.title
  %hr
  %content
    =markdown @post.content
  %hr
  #share_article
    %p
      Partager cette article
    %nav
      %a{:onclick => "javascript:window.open('http://twitter.com/share?text=#{@post.title} by @sdromacque - &url=#{url_for([@post, {only_path: false}])}', '_blank', 'width=800, height=500, top=200, left=300');void(0);"}
        %i.fa.fa-twitter.fa-2x
      -#todo other link
    =render 'disqus'
  =link_to "Edit", edit_post_path(@post)