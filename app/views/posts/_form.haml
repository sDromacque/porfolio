= form_for @post do |f|
  - if @post.errors.any?
    %h2
      = pluralize(@post.errors.count, "error")
      prevented this post from saving:
    %ul
      - @posts.errors.full_messages.each do |msg|
        %li= msg
  = f.label :title
  %br
    = f.text_field :title
    %br
      %br
        = f.label :content
        %br
          = f.text_area :content
          %br
            %br
              = f.submit